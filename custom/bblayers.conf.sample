# POKY_BBLAYERS_CONF_VERSION is increased each time build/conf/bblayers.conf
# changes incompatibly
POKY_BBLAYERS_CONF_VERSION = "3"

BBPATH = "${TOPDIR}"
BBFILES ?= ""

BBLAYERS ?= " \
  $TOPDIR/cuteradio/sources/poky/meta \
  $TOPDIR/cuteradio/sources/poky/meta-poky \
  $TOPDIR/cuteradio/sources/meta-openembedded/meta-oe \
  $TOPDIR/cuteradio/sources/meta-openembedded/meta-python \
  $TOPDIR/cuteradio/sources/meta-raspberrypi \
  $TOPDIR/cuteradio/sources/meta-qt5 \
  $TOPDIR/cuteradio/sources/meta-cuteradio \
"

